<?xml version="1.0" encoding="utf-8"?>
<mujoco>
	<compiler angle="radian" coordinate="local" meshdir="fetch" texturedir="texture"></compiler>
	<size nconmax="2000" njmax="500"/>
	<option timestep="0.002">
		<flag warmstart="enable"></flag>
	</option>
	<include file="shared.xml"></include>
	<worldbody>
		<geom name="floorgeom0" pos="1.2 -2.0 0" size="1.0 10.0 1" type="plane" condim="3" material="floor_mat"></geom>
		<body name="floor0" pos="1.4 0.25 0">
			<site name="target0" pos="0 0 0.70015" size="0.0475 0.001" rgba="1 0 0 1" type="cylinder"></site>
		</body>

		<include file="robot_xarm.xml"></include>

		<body pos="0.75 0 0.78" name="pedestal0">
			<geom name="pedestalgeom0" size="0.4 0.4 0.02" type="box" mass="2000" material="pedestal_mat"></geom>
			<site pos="0.30 0.30 0" size="0.075 0.075 0.002" type="box" name="robotmountsite0" rgba="0.55 0.54 0.53 1" />
		</body>

		<body pos="1.655 0.3 0.65625" name="table0">
			<geom name="tablegeom0" size="0.4 0.425 0.04375" type="box" mass="2000" material="table_mat"></geom>
			<site pos = "0 -0.38 0.04375" size="0.4 0.05 0.04" type="box" name="boundary1" rgba="0.90 0.75 0.51 1" material="table_mat"/>
			<site pos = "0 0.38 0.04375" size="0.4 0.05 0.04" type="box" name="boundary2" rgba="0.90 0.75 0.51 1" material="table_mat"/>
			<site pos = "-0.40 0 0.04375" size="0.02 0.425 0.02" type="box" name="boundary3" rgba="0.90 0.75 0.51 1" material="table_mat"/>
			<!-- <site pos="-0.205 0.0 0.04375" size="0.2 0.3 0.002" type="box" rgba="0 0 0 1" material="table_mat"/> -->
			<!--<site pos="0.25 0 0" size="0.002 0.30 0.56" type='box' name="wall" rgba="0.90 0.75 0.51 1" material="table_mat"/>-->
		</body>

		<body name="object0" pos="1.655 0.3 0.75625">
			<joint name="object0:joint" type="free" damping="0.01" limited="false"></joint>
			<geom size="0.04 0.04 0.04" type="box" condim="3" name="object0" material="block_mat" mass="2"></geom>
			<site name="object0" pos="0 0 0" size="0.035 0.035 0.035" rgba="0 0 0 0" type="sphere"></site>
		</body>

		<body name="camera_target" pos="1.655 0.3 1">
            <geom conaffinity="0" contype="0" pos="0 0 0" rgba="0 0 1 0" size="0.0475 0.0475 0.001" type="box"></geom>
        </body>
        <body name="camera_target_2" pos="1.655 0.3 1.1">
            <geom conaffinity="0" contype="0" pos="0 0 0" rgba="0 0 1 0" size="0.0475 0.0475 0.001" type="box"></geom>
        </body>

		<light directional="true" ambient="0.2 0.2 0.2" diffuse="0 0 0" specular="0.01 0.01 0.01" castshadow="false" pos="4 0 4" dir="-1 0 -0.1" name="light0"></light>
		<light directional="true" ambient="0.1 0.1 0.1" diffuse="0 0 0" specular="0.01 0.01 0.01" castshadow="false" pos="0 -4 4" dir="0 1 -0.1" name="light1"></light>
		<light directional="true" ambient="0 0 0" diffuse="0 0 0" specular="0.01 0.01 0.01" castshadow="false" pos="40 4 4" name="light2"></light>
		<light pos="1.3 0 2" castshadow="false" name="light3"></light>

		<!--<camera fovy="65" name="camera0" pos="2.05 0.30 1.4" euler="0 0.85 1.57"/>-->
		<!--<camera fovy="75" name="camera0" pos="1.65 0.21 1.30" euler="0 0.70 1.57"/>-->
		<camera fovy="70" name="third_person_3" pos="2.10 0.3 1.5" euler="0 0.95 1.57"/> <!-- could be 1.5 height -->
		<!-- <camera fovy="45" name="camera1" pos="0.7 0.7 1.6" mode="targetbodycom" target="table0"/> -->

		<camera fovy="70" name="camera_front" pos="1.9 0.3 1.3" mode="targetbody" target="camera_target"/>
		<camera fovy="70" name="camera_dynamic" pos="1.9 0.3 1.3" mode="targetbody" target="camera_target"/>

		<camera fovy="70" name="camera_front_2" pos="1.9 0.3 1.3" mode="targetbody" target="camera_target_2"/>
		<camera fovy="70" name="camera_dynamic_2" pos="1.9 0.3 1.3" mode="targetbody" target="camera_target_2"/>

		<!-- x = 1.655 + 0.445*cos_theta
             y = 0.3 + 0.6*sin_theta -->

	</worldbody>

	<equality>
    	<connect body2="left_finger" body1="left_inner_knuckle" anchor="0.0 0.035 0.042" solimp="0.9 0.95 0.001 0.5 2" solref="0.0002 1.0" ></connect>
    	<connect body2="right_finger" body1="right_inner_knuckle" anchor="0.0 -0.035 0.042" solimp="0.9 0.95 0.001 0.5 2" solref="0.0002 1.0" ></connect>
        <joint joint1="left_inner_knuckle_joint" joint2="right_inner_knuckle_joint"></joint>
    </equality>

	 <actuator>
    	<motor ctrllimited="true" ctrlrange="-1.0 1.0" joint="left_inner_knuckle_joint" gear="200.0"/>
        <motor ctrllimited="true" ctrlrange="-1.0 1.0" joint="right_inner_knuckle_joint" gear="200.0"/>
        <!-- <position ctrllimited="true" ctrlrange="0 0.85" gear="1" kp="10" joint="left_inner_knuckle_joint"/> -->
    </actuator>
</mujoco>
